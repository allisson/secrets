{
  "title": "Secrets Rate Limiting",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": []
  },
  "panels": [
    {
      "type": "timeseries",
      "title": "429 Rate by Path",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(secrets_http_requests_total{status_code=\"429\"}[5m])) by (path)",
          "legendFormat": "{{path}}"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "429 Ratio Global",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(secrets_http_requests_total{status_code=\"429\"}[10m])) / sum(rate(secrets_http_requests_total[10m]))",
          "legendFormat": "ratio"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "403 vs 429",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 8 },
      "targets": [
        {
          "refId": "A",
          "expr": "sum(rate(secrets_http_requests_total{status_code=\"403\"}[5m]))",
          "legendFormat": "403"
        },
        {
          "refId": "B",
          "expr": "sum(rate(secrets_http_requests_total{status_code=\"429\"}[5m]))",
          "legendFormat": "429"
        }
      ]
    }
  ]
}
